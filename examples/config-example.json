{
    "setup": {
        "configFileDirname": "$HOME/.config/fisga/",
        "steps": [
            {
                "name": "WORKSPACE",
                "type": "input",
                "description": "Please provide the path for your project"
            },
            {
                "name": "USE_SUDO",
                "type": "confirm",
                "description": "Should we use sudo?"
            }
        ]
    },
    "commands": [
        {
            "name": "git",
            "description": "Git related commands",
            "dirname": "{CONFIG.WORKSPACE}/mezcla",
            "commands": [
                {
                    "name": "add",
                    "description": "Stage changes",
                    "args": {
                        "files": {
                            "type": "regexp",
                            "glob": "**/*",
                            "description": "files to stage",
                            "required": true
                        }
                    },
                    "command": "git add {files}"
                },
                {
                    "name": "test",
                    "description": "some test",
                    "type": "input",
                    "command": "echo 'YO!' && head package.json"
                },
                {
                    "name": "commit",
                    "description": "Commit changes",
                    "args": {
                        "message": {
                            "type": "input",
                            "description": "Commit message",
                            "required": true
                        },
                        "verify": {
                            "type": "confirm",
                            "description": "Are you sure?",
                            "default": false
                        }
                    },
                    "command": "git commit -m '{message}'"
                },
                {
                    "name": "push",
                    "description": "Push changes",
                    "command": "git push"
                }
            ]
        },
        {
            "name": "docker",
            "description": "Docker related commands",
            "commands": [
                {
                    "name": "build",
                    "description": "Build container",
                    "args": {
                        "tag": {
                            "type": "input",
                            "description": "Container tag",
                            "required": true
                        }
                    },
                    "command": "docker build -t {tag} ."
                }
            ]
        }
    ]
}